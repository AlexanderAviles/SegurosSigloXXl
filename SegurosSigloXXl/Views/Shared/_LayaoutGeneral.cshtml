            </div>
            <div class="navbar-header">
                @Html.ActionLink("Seguros Siglos XXI", "Principal", "Principal", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">

                <ul class="nav navbar-nav" id="menu">
                    @{
                        if (ViewBag.TipoUsuario == "Colaborador")
                        {
                            <li>
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown"><span class="glyphicon glyphicon-log-in"></span> Mantenimientos<span class="caret"></span></a>
