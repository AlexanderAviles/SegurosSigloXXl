                                    <li id="len7" class="hoverable">@Html.ActionLink("Adicciones por clientes", "ReporteAdiccionesPorCliente", "ReporteAdiccionesPorCliente")</li>
                                    <li id="len6" class="hoverable">@Html.ActionLink("Pólizas por cliente", "ReportePolizasPorClientes", "ReportePolizasPorClientes")</li>
                                </ul>
