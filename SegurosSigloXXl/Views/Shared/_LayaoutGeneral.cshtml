                                </ul>
                            </li>
                        }

                    }
                    <li id="len8" class="hoverable" style="margin-left: 200px"><a><i class="bi bi-person-circle"></i> @ViewBag.NombreCliente</a></li>
                    <li id="len8" onclick="quitarSesion()" class="hoverable">@Html.ActionLink("Cerrar sesión", "CerrarSesion", "Login")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />

    </div>
    <br />
    <br />
    <footer class="Footer-Color">
        <br />
        <p>&copy; @DateTime.Now.Year - Seguros del Siglo XXl.</p>
